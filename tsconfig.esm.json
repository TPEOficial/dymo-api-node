{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "types": [
            "node"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist/esm",
        "rootDir": "./src",
        "declaration": true,
        "declarationDir": "./dist/types"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/**",
        "**/*.spec.ts",
        "**/*.test.ts",
        "jest.config.js"
    ]
}