{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "ignoreDeprecations": "6.0",
        "moduleResolution": "Node",
        "types": [
            "jest",
            "node"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist/types",
        "rootDir": "./src",
        "declaration": true,
        "declarationDir": "./dist/types",
        "emitDeclarationOnly": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}